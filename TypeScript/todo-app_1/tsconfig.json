{
  "compilerOptions": {
    "target": "es6", // ECMAScript のバージョンを指定 (ES6 以降を推奨)
    "module": "es6", // モジュールシステムを指定 (ES Modules を使用)
    "outDir": "./dist", // コンパイル後の JavaScript ファイルの出力先
    "rootDir": "./src", // TypeScript ファイルのルートディレクトリ
    "strict": true, // 厳格な型チェックを有効化
    "esModuleInterop": true, // CommonJS と ES Modules の相互運用性を向上
    "skipLibCheck": true, // 型定義ファイルのチェックをスキップ
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字/小文字を区別
    "moduleResolution": "node" // モジュール解決方法をnodeにする
  },
  "include": [
    "src/**/*"
  ] // コンパイル対象のディレクトリ
}